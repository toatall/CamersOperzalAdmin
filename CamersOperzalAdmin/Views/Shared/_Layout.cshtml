<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Администрирование интернет-сервиса видео-наблюдения</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/metisMenu/css")
    @Styles.Render("~/Content/SBAdmin2/css")
    @Styles.Render("~/Content/font-awesome/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/SBAdmin2/js")
    @Styles.Render("~/Content/metisMenu/js")
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><i class="fa fa-gears"></i> Администрирование интернет-сервиса видео-наблюдения</a>
            </div>
            <!-- /.navbar-header -->


            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard fa-fw"></i> Состояние</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Setting","Home")"><i class="fa fa-wrench fa-fw"></i> Настройки</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Ifns")"><i class="fa fa-home fa-fw"></i> Управление инспекциями</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Camera","Home")"><i class="fa fa-video-camera fa-fw"></i> Управлением камерами</a>
                        </li>
                        <li>
                            <a href="@Url.Action("DisableCamera","Home")"><i class="fa fa-check-square-o fa-fw"></i> Включение и выключение камер</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <div class="body-content">
        <hr />
        <footer class="center-block">
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
            <p>Трусов Олег Алексеевич</p>
        </footer>
    </div>    
    @RenderSection("scripts", required: false)
</body>
</html>
